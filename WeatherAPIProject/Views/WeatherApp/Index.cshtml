@model WeatherAPIProject.Models.WeatherModel

<style>
    #apiDiv {
        padding-left: 20px;
    }

        #apiDiv select, #apiDiv button {
            font-size: 25px;
        }

        #apiDiv h4 {
            margin: 10px 0;
        }

        #apiDiv #message table {
            width: 100%;
            border: double 1px #0914b6;
            background: #9deee7;
        }

            #apiDiv #message table th {
                text-align: left;
                background: rgb(240, 124, 149);
            }
</style>
@{ ViewBag.Title = "Implement Weather API in ASP.NET MVC";}
<h1>Implement Weather API in ASP.NET MVC</h1>
<h2>
  @using (Html.BeginForm())
    {<button id="reset" name="reset">Reset »</button>}
</h2>

<div id="apiDiv">
    <h4>Select the City for Weather Report</h4>
    @using (Html.BeginForm())
    {
    /*foreach (var city in Model.Cities)
    {
    <span>
        @Html.RadioButtonFor(m => m.Cities, city.Value) @city.Key
    </span>
    }*/
        @Html.DropDownListFor(m=>m.Cities,new SelectList(Model.Cities.Values),"select Cities")
    
    <button name="submit">Submit</button>
    }
    <div id="message">@(new HtmlString(Model.apiResponse))</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("input[id='cities']").change(function () {
            $(this).parents("#apiDiv").find("span").css("background", "none");
            $(this).parent().css("background", "#4CAF50");
        });
    });
</script>